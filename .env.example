# Database
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# API Configuration
PORT=8000
NODE_ENV=development

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# BetterAuth (will be added when implementing authentication)
# BETTER_AUTH_SECRET=your-secret-key-here
# BETTER_AUTH_URL=http://localhost:3000

# Email (SMTP Configuration for NodeMailer)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@yourcompany.com

# Payment (Polar - will be added when implementing payments)
# POLAR_API_KEY=

# Sentry - Error Tracking & Monitoring
# Get your DSN from: https://sentry.io/settings/projects/your-project/keys/
SENTRY_DSN=https://xxxxx@oxxxxx.ingest.sentry.io/xxxxxx
SENTRY_ENVIRONMENT=development  # development, staging, or production
SENTRY_TRACES_SAMPLE_RATE=0.1   # 0.1 = 10%, 1.0 = 100%
SENTRY_ENABLE_TRACING=true

# For Next.js web app (client-side)
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@oxxxxx.ingest.sentry.io/xxxxxx
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1

# Sentry Project Configuration (for source map uploads - optional in dev)
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=your-project-slug
SENTRY_AUTH_TOKEN=your_auth_token

# Analytics (PostHog) - Optional
# POSTHOG_API_KEY=