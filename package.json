{
  "private": true,
  "name": "agency",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "test": "turbo run test",
    "prepare": "husky",
    "commit": "cz",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "changeset:status": "changeset status",
    "deploy:api": "cd apps/api && fly deploy --config fly.toml",
    "deploy:web": "cd apps/web && fly deploy --config fly.toml --build-arg NEXT_PUBLIC_API_URL=$NEXT_PUBLIC_API_URL",
    "deploy:all": "pnpm deploy:api && pnpm deploy:web",
    "fly:status": "fly status --app skyll-api && fly status --app skyll-web",
    "fly:logs:api": "fly logs --app skyll-api",
    "fly:logs:web": "fly logs --app skyll-web"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.4.1",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@vitest/ui": "^4.0.13",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.1",
    "eslint-config-turbo": "^2.6.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "vitest": "^4.0.13"
  },
  "packageManager": "pnpm@9.0.0",
  "pnpm": {
    "overrides": {
      "import-in-the-middle": "1.15.0",
      "require-in-the-middle": "7.5.2",
      "esbuild": ">=0.25.0",
      "tmp": ">=0.2.4"
    }
  },
  "lint-staged": {
    "apps/api/**/*.{js,jsx,ts,tsx}": [
      "bash -c 'turbo run lint --filter=@repo/api'",
      "prettier --write"
    ],
    "apps/web/**/*.{js,jsx,ts,tsx}": [
      "bash -c 'turbo run lint --filter=@repo/web'",
      "prettier --write"
    ],
    "**/*.{json,css,md,mdx}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
