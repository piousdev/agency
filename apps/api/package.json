{
  "name": "@repo/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "clean": "find src -type f \\( -name '*.js' -o -name '*.d.ts' \\) ! -name '*.config.js' ! -name '*.config.cjs' -delete && rm -rf dist",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "deploy": "fly deploy --config fly.toml",
    "fly:launch": "fly launch --config fly.toml",
    "fly:status": "fly status",
    "fly:logs": "fly logs",
    "fly:ssh": "fly ssh console"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@hono/zod-validator": "^0.7.5",
    "@neondatabase/serverless": "^1.0.2",
    "@sentry/node": "^10.26.0",
    "better-auth": "^1.4.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.6",
    "nodemailer": "^7.0.10",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.19.1",
    "@types/nodemailer": "^7.0.4",
    "drizzle-kit": "^0.31.7",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  }
}
