# Database
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# API Configuration
PORT=8000
NODE_ENV=development

# BetterAuth - Authentication & Session Management
# Generate secret: openssl rand -base64 32
BETTER_AUTH_SECRET=your-32-byte-secret-key-here-replace-this
# URL where the web app is running (used for CORS and redirects)
BETTER_AUTH_URL=http://localhost:3000

# Email (NodeMailer SMTP) - Required for email verification
# SMTP Server Configuration
SMTP_HOST=smtp.gmail.com              # Gmail: smtp.gmail.com, SendGrid: smtp.sendgrid.net
SMTP_PORT=587                         # 587 for TLS, 465 for SSL
SMTP_SECURE=false                     # true for port 465 (SSL), false for 587 (TLS)
SMTP_USER=your-email@gmail.com        # SMTP username (usually your email)
SMTP_PASS=your-app-specific-password  # SMTP password or app-specific password
SMTP_FROM=noreply@yourdomain.com      # Default "from" email address

# Optional: Resend (Alternative to SMTP - not currently used)
# RESEND_API_KEY=your_resend_api_key
# EMAIL_FROM=noreply@yourdomain.com

# File Storage (Cloudflare R2)
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_BUCKET_NAME=your_bucket_name
R2_PUBLIC_URL=https://your_public_url

# Redis (Upstash) - Optional
# REDIS_URL=redis://default:token@host:port
# REDIS_TOKEN=your_redis_token

# Admin User (for seeding)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme
ADMIN_NAME=Admin User

# Sentry - Error Tracking & Monitoring
# Get your DSN from: https://sentry.io/settings/projects/your-project/keys/
SENTRY_DSN=https://xxxxx@oxxxxx.ingest.sentry.io/xxxxxx
SENTRY_ENVIRONMENT=development  # development, staging, or production
SENTRY_TRACES_SAMPLE_RATE=0.1   # 0.1 = 10%, 1.0 = 100% (use lower in production)
SENTRY_ENABLE_TRACING=true      # Enable performance monitoring
# SENTRY_SEND_IN_DEV=false      # Uncomment to send events in development (logs to console by default)